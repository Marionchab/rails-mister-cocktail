<h1 class="text-center">Cocktails</h1>

<div class="container padded">
 <div class="row">
     <% @cocktails.each do |cocktail| %>
     <div class="col-xs-12 col-sm-6 col-md-3">
       <%= link_to cocktail_path(cocktail), class:"card" do  %>
         <h2><%= cocktail.name %></h2>
       <% end %>
     </div>
     <% end %>
 </div>
</div>

<div class="text-center padded">
<%= link_to 'Add new cocktail', new_cocktail_path, {class: "btn btn-danger"} %>
</div>
