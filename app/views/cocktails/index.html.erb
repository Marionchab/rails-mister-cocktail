<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('background.jpg');">
  <div class="banner-content">
    <h1>Mr Cocktail</h1>
    <p>The world's best selling classic Cocktails</p>
    <a href="#" class="btn-treehouse">Discover</a>
  </div>
</div>

<div class="container padded">
 <div class="row">
   <% @cocktails.each do |cocktail| %>
   <div class="col-xs-12 col-sm-6 col-md-4">
     <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cocktail.photo.url.nil? ? "http://placehold.it/300x500" : cl_image_path(cocktail.photo, height: 300, width: 400, crop: :fill) %>');">
      <div class="card-category">Popular</div>
      <div class="card-description">
        <h2><%= cocktail.name %></h2>
        <p>Very cool stuff, useful and smart</p>
      </div>
      <img class="card-user avatar" src="user.jpg">
      <%= link_to "", cocktail_path(cocktail) %>
    </div>
  </div>
  <% end %>
</div>

<div class="text-center padded">
  <%= link_to 'Add new cocktail', new_cocktail_path, {class: "btn-treehouse"} %>
</div>
