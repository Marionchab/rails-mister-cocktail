
  <h2 class="title_show text-center"><%= @cocktail.name %></h2>
  <hr>

  <div class="container padded">
   <div class="row">
  <% if @cocktail.photo.present? %>
    <div class="col-xs-12 col-sm-6">
      <div class="card img-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=cl_image_path(@cocktail.photo, height: 300, width: 400, crop: :fill) %>');">
      </div>
    </div>
  <% else %>
    <div class="col-xs-12 col-sm-6">
      <div class="card img-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://unsplash.it/360/175?image=<%= rand(1...300) %>');">
      </div>
    </div>
  <% end %>
    <div class="col-xs-12 col-sm-6">
        <% @cocktail.doses.each do |dose| %>
      <ul>
        <li>
        <%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
        </li>
      </ul>
        <% end %>
      <% end %>
    </div>
  </div>


