<h2><%= @cocktail.name %></h2>
<ul>
<% @cocktail.doses.each do |dose| %>
 <li><%= dose.description %> <%= dose.ingredient.name %></li>
<% end %>
</ul>

<%= link_to "New dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Edit", edit_cocktail_path %>
<%= link_to "Back", cocktails_path %>
<%= link_to "Delete", @cocktail,
      method: :delete,
      data: { confirm: "Are you sure?" } %>
